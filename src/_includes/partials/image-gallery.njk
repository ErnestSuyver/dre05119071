<!-- This is the "gallery" of individual images on a collection page-->
<div class="gallery">
    <ul class="gallery-list">
        <!-- warning! any data  file name containing the string "collections" is forbidden by Eleventy -->
        <!-- warning! any data file name containing hyphens is forbidden by Eleventy -->
        {% for image in images %}
        {% if image.gallery | slug in page.url %}
        <li class="gallery-item">
            <div class="image-block">
                <a href="/collections/{{ image.gallery | slug }}/{{ image.src }}" aria-label="Image from collection /collections/{{ image.title | slug }}/{{ image.src}}">
                <picture>
                    <source
      type="image/jpeg"
      class="showcase-img"
      srcset="{{ image.imgDir }}{{ image.src }} 640w"
      >
      <img src="{{ image.imgDir }}{{ image.src }}" alt="{{ image.alt }}" class="showcase-img" width="640" height="640">
                </picture>
                </a>
                <!--
                <div class="block-details">
                    <p>{{ image.date }}</p>
                    <h2><a href="/collections/{{ image.gallery | slug }}/{{ image.src }}">Go to {{ image.src }}</a></h2>
                </div> -->
            </div>
            <!-- <div class="block-info"> -->
            <div>
                    <p>{{ image.title }}, {{ image.date }}. Part of {{ image.gallery }}. <!-- Now available on <a href=" {{ image.linkToAuthor }} "><img src="/favicon_data/buy-it-on-opensea.svg" alt="OpenSea" width="12" height="12" style="display: inline"></img></a>--></p>
            </div>
        </li>
        {% endif %}
        {% endfor %}
    </ul>
</div>
