numDots = 80
dotSize = width() / numDots

for i in range(numDots):
    
    amplitude = 80
    period = 1 #the value "1" gives us exactly 1 wave
    for i in range(numDots + 1):
        x = -1000 + i * dotSize * 2 * period #dit was 100
        angle = 360 * i / numDots
        angle += i / numDots * 360
        y = 0 + amplitude * sin(radians(angle))
        #y = height()/2 + amplitude * sin(radians(angle)) #0 was het beste
        shadow((-5, -5), 5, (0.5, 0.5, 0.5, 0.85))
        # fill(.88)
        # linearGradient(
        #     (x, y),
        #     (x+dotSize, y+dotSize),
        #     [(0.1, 0.7, 0.8), (0.1, 0.8, 0.9), (0.1, 0.9, 0.9)],
        #     [0.1, 0.4, 0.2]
        #     )
        fill(0.4 * 0.3 * random(), 0.19, 0.19)
        # oval(x,y,w,0.5 * w)
        oval(x,y,w,0.4 * w * 0.3 * random())
        # oval(x * 0.3 * random(),y * 0.3 * random(),w,0.4 * w * 0.3 * random())
        rotate(0)

saveImage('waves-1variant-2' + timestr + '.jpg')
saveImage('waves-1variant-2' + timestr + '.pdf')
saveImage('waves-1variant-2' + timestr + '.svg')


