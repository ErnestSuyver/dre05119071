from time import strftime
timestr = strftime('%Y%m%d-%H%M%S')

newPage("A3Landscape")

fill(0.39,0.19,0.19,0.8)
# fill(.8)
rect(0,0,width(),height())

for i in range(500):
    save()
    shadow((-5, -5), 10, (0.9, 0.9, 0.9, 0.85))
    fill(0.6,0.6,0.19,0.9)
    oval(width() * random(), height() * random(), 3,2)
    restore()

w = 24 #width

# shadow((-15, -15), 10, (0.3, 0.25, 0.25, 0.90))
