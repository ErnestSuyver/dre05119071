from time import strftime
timestr = strftime('%Y%m%d-%H%M%S')

newPage()

w = 100
h = w
r = 1
s = 1
t1 = 1
t2 = t1
n = 3
f = -170

def tree(n):
   oval(0, 0, w, h)

   if n > 0:
       
       save()
       translate(w, h)
       rotate(r)
       scale(s)
       translate(f * t1,f * t2)
       tree(n-1)
       restore()
       
       save()
       translate(w, h)
       rotate(-21 * r)
       scale(s)
       translate(f * t1,f * t2)
       tree(n-1)
       restore()
 
#if you translate the second set left and down at the same time,you get a funny "melting" effect 
       
translate(width()/2 - w/2, height()/2 - h/2)
tree(n)

saveImage('fractals-2variant3-5-' + timestr + '.jpg')


