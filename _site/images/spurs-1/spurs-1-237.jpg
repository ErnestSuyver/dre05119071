#page 5
newPage("A3")

fill(0.85,0.90,0.93,0.95)
rect(0,0,width(),height())

for i in range(500):
    save()
    shadow((-7, -7), 10, (0.8, 0.8, 0.8, 0.99))
    fill(0.85,0.85,0.86,0.9)
    oval(width() * random(), height() * random(),3 + i / 10,1.5 * random())
    restore()

x = 450
y = 150
w = 250
h = w / 1.8
boogje = 0.2
wow_stroke = 0.2
wow_fill = 0.2

def hairs(hairy):
    for i in range(hairy):  
        shadow((-w/100, -w/100), w/1.2, (0.9, 0.9, 0.9, 0.99))
        stroke(0.50 * random() * wow_stroke,0.3 * random() * wow_stroke,0.3 * random() * wow_stroke,0.9)
        strokeWidth(w * 10 * random() * wow_stroke)
        fill(0.49,0.39,0.39,0.9)
        oval(x,y,w * random() * wow_fill,h * random() * wow_fill)
        rotate(boogje)
    
for i in range(15):
    #newPage()
    x = x + random() * 200 * wow_fill
    hairs(15)

saveImage('hairy-2-5-' + timestr + '.svg')
