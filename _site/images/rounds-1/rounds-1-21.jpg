#toverbal

nr_frames = 12

for frame in range(nr_frames):
    newPage(500, 500)
    frameDuration(1/10)

    fill(0, 1, 1, 0.8)
    rect(0, 0, width(), height())

    ball_dia = width() / 8 * 0.75 * frame

    translate(0.5 * ball_dia * frame)

    fill(1, 0, 1, 0.9)
    oval(width() / 2 - 3.5 * ball_dia, width() / 2 - ball_dia / 2, ball_dia, ball_dia)

#we zouden nu een groeiende toverbal kunnen maken:
#voor elk frame erbij een grotere cirkel in een andere kleur
#kleur en omvang kunnen we programmatisch laten groeien

saveImage("toverbal-3.gif")