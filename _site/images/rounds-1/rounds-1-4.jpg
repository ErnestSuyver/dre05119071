nr_frames = 10
for frame in range(nr_frames):

    newPage(500, 500)
    frameDuration(1/12)
    if frame % 2 == 0:
        fill(0.1, 0.15, 0.67, 0.27)
        rect(0, 0, width(), width())
    else:
        fill(0.67, 0.15, 0.1, 0.27)
        rect(0, 0, width(), width())


    o_dia = 70
    o_size = 0.1 * o_dia - frame
    d = o_dia * o_size

    a = o_size * o_dia / 66 / 7
    fill(0.2, 0.35, 0.8, a)
    print(a)
    oval(width() / 2 - d / 2, width() / 2 - d / 2, d, d)

