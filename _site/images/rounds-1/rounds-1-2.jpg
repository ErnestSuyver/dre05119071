#toverbal

nr_frames = 8

for frame in range(nr_frames):
    newPage(500, 500)
    frameDuration(1/10)

    fill(0, 1, 1, 0.8)
    rect(0, 0, width(), height())

    ball_dia = 50 + frame * width() / 8

    r = 0.5 + 0.25 * frame
    g = 0.9 - 0.15 * frame
    b = 0
    a = 0.9
    fill(r, g, b, a)
    oval(width() / 2 - 0.5 * ball_dia, width() / 2 - 0.5 * ball_dia, ball_dia, ball_dia)

