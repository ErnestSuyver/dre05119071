newPage()
# page 2

fill(0.22,0.21,0.13,0.87)
rect(0,0,width(),height())

w = 6

for i in range(250):
    save()
    shadow((0,0), 10, ((0.85 + w/100, 0.45 + w/100, 0.15 + w/100)))
    stroke(0.75 + w/100, 0.35 + w/100, 0.15 + w/100)
    strokeWidth(w/10)
    fill(0.65, 0.15, 0.15)
    oval(width() * random(), height() * random(),w + i / 10,1.5)
    restore()

x = 250
y = 250
w = 250
h = w / 2
a,b,c = 0.55, 0.25, 0.15
ra = 80 #range
rf = ra #rotation factor

for i in range(ra):
    save()
    shadow((0,0), 10 * random(), (a - 0.2 * a * random(),b - 0.2 * b * random(),c - 0.2 * c * random()))
    stroke(a - 0.1 * a * random(),b - 0.1 * b * random(),c - 0.1 * c * random())
    strokeWidth(w/10 * random())
    fill(a * random(),b * random(),c * random())
    translate(w * i * random(), h * i * random())
    rotate(i*rf * random())
    oval(x, y, w * random(), h * random())
    restore()

for j in range(ra):
    save()
    shadow((0,0), 10 * random(), (a - 0.4 * a * random(),b - 0.4 * b * random(),c - 0.4 * c * random()))
    stroke(a - 0.3 * a * random(),b - 0.3 * b * random(),c - 0.3 * c * random())
    strokeWidth(w/50 * random()) #grappig effect,die stroke is veel te groot voor de kleine cirkels
    fill(a - 0.2 * a * random(),b - 0.2 * b * random(),c - 0.2 * c * random())
    translate(w * j * random(), h * j * random())
    rotate(j*rf * random())
    oval(x+w/2.2 * random(),y+h/2.11 * random(), w/100 * random(), h/100 * random())
    oval(x+w/2.3 * random(),y+h/2.22 * random(), w/100, h/100 * random())
    oval(x+w/2.1 * random(),y+h/2 * random(), w/100, h/100 * random())
    oval(x+w/1.9 * random(),y+h/1.9 * random(), w/100, h/100 * random())
    oval(x+w/2 * random(),y+h/1.7 * random(), w/100, h/100 * random())
    restore()


