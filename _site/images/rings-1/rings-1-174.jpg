from time import strftime

timestr = strftime('%Y%m%d-%H%M%S')

# page 1
w, h = 1000, 1000 # size of the pages / frames
newPage(w, h) # create a new page
fill(0.75)
rect(5,5,w-10,h-10) # set background

# loop over the amount of frames needed
for i in range(1):
    save()
    shadow((0,0), 10, ((0.85 + w/75, 0.45 + w/75, 0.15 + w/75)))
    stroke(0.85 + w/100, 0.45 + w/100, 0.15 + w/100)
    strokeWidth(w/10)
    fill(0.85, 0.45, 0.15) # set fill color
    translate(w / 2, h / 2) # translate to the center of the page
    rotate(i*10) # rotate around the center ditwas10
    oval(-50, -50, 50, 50) # draw the rect
    restore()

saveImage('rings-2-1' + timestr + '.jpg')
saveImage('rings-2-1' + timestr + '.svg')
