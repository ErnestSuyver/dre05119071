newPage()
    
fill(0.4,0.2,0.2,0.95)
rect(0,0,width(),height())

w = 100
h = 200

for i in range(1,30,1):
    fill(0.49-i/100,0.2-i/100,0.2,0.8)
    oval(width() - 1.225 * w,-80,w+10*i,h * i)
    shadow((0,0), 50, (0.5-i/100,0.4,0.3,0.5))
    shadow((0,0), 100, (0.6-i/100,0.4,0.3,0.6))
    shadow((0,0), 150, (0.7-i/100,0.5,0.3,0.7))
    shadow((0,0), 200, (0.8-i/100,0.5,0.3,0.8))
    rotate(3.5 + 0.25 * i)

saveImage("growth-1-4.jpeg")

